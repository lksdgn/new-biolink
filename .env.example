# Environment
NODE_ENV=development
PORT=3000

# PostgreSQL Database
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Configuration
JWT_SECRET="your-jwt-secret-key-min-32-characters"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-key-min-32-characters"
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Spotify (optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3000/api/oauth/spotify/callback

# OAuth Discord (optional)
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=http://localhost:3000/api/oauth/discord/callback

# Premium/Payment (optional)
PREMIUM_WEBHOOK_SECRET=your_webhook_secret

# Frontend URL (CORS) - Multiple URLs separated by comma
FRONTEND_URL=http://localhost:8080,http://localhost:5173
